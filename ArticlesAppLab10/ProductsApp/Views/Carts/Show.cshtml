@model ProductsApp.Models.Cart

<div class="row">

    <div class="col-12">

        <h5 class="card-title mt-5 mb-3" asp-for="Name">@Model.Name</h5>

        @if (ViewBag.EsteAdmin)
        {
            <i class="bi bi-person"> Creat de: </i> @Model.User.UserName
        }

        <br /><br />
        Produse in colectie:
        <br /><br />
    </div>
    <br />

    @if (Model.ProductCarts.Count > 0)
    {
        @foreach (var productCart in Model.ProductCarts)
        {
            <div class="col-12">
                <div class="card" style="width: 100%;">
                    @* Afișare informații produs *@
                    <div class="card-body">
                        <partial name="ProductInfo" model="productCart.Product" />
                    </div>
                </div>
                <br /><br />
            </div>
        }

        @* Formular pentru plasarea comenzii *@
        <div class="col-12 text-center mt-4">
            <form asp-action="PlaceOrder" method="post">
                <input type="hidden" name="cartId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary">Plasează Comanda</button>
            </form>
        </div>
    }
    else
    {
        <div class="col-12">
            <p>Nu există produse în această colecție.</p>
        </div>
    }

</div>
