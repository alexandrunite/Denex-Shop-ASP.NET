<br />
<br />

@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<br />

<a asp-controller="Carts" asp-action="New" class="btn btn-success rounded-pill mb-5">
    <i class="bi bi-plus"></i> Adăugare cart
</a>

<div class="row">

    @foreach (var cart in ViewBag.Carts)
    {
        <div class="col-4 mb-4">

            <div class="card">

                <div class="card-body">
                    
                    <h5 class="card-title" name="Name">@cart.Name</h5>

                        @if (ViewBag.EsteAdmin)
                        {
                            <div><i class="bi bi-person"> Creat de: </i> @cart.User.UserName</div>
                        }        

                    <br />

                    <a asp-controller="Carts" asp-action="Show" asp-route-id="@cart.Id" class="btn alert-success">Afisare Colectie</a>

                </div>
            </div>
        </div>
    }

</div>