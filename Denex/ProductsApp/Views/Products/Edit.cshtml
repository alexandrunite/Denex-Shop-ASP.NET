@model ProductsApp.Models.ViewModels.ProductEditViewModel

@{
    ViewBag.Title = "Editează Produs";
}

<h2 class="text-center mt-5">Editează Produs</h2>
<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <input type="hidden" asp-for="ProductId" />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="form-label">Titlu Produs</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <label asp-for="Content" class="form-label">Descriere Produs</label>
                    <textarea asp-for="Content" class="form-control summernote"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <label asp-for="CategoryId" class="form-label">Selectați Categoria</label>
                    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control" required>
                        <option value="">Selectați categoria</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <label asp-for="Price" class="form-label">Preț</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <label asp-for="Stock" class="form-label">Stoc</label>
                    <input asp-for="Stock" class="form-control" type="number" min="0" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <label asp-for="ImageFile" class="form-label">Imagine</label>
                    <input asp-for="ImageFile" class="form-control-file" type="file" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <br />

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="form-group">
                        <label>Imagine Actuală</label>
                        <br />
                        <img src="@Model.ImageUrl" alt="Imagine Produs" style="max-width: 200px;" />
                    </div>
                    <br />
                }

                <button class="btn btn-primary" type="submit">Trimite Cerere de Editare</button>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
